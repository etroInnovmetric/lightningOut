<html>

  <script src="https://full-polyworks.cs226.force.com/tsz/lightning/lightning.out.js"></script>

  <div data-lightning-out="true"></div>

  <script>

    const appName = 'JobsOut';
    const componentName = 'c:iCIMS_Jobs';
    const lightningEndpoint = 'https://full-polyworks.cs226.force.com/tsz';
    const targetElement = document.querySelector("[data-lightning-out]");
    const componentAttributes = {};

    $Lightning.use(
      appName,
      funtion (){
        $Lightning.createComponent(
          componentName,
          componentAttributes,
          targetElement,
          function (cmp){
            console.log('lightning component created');
          }
        );
      },
      lightningEndpoint
    );

  </script>

</html>
